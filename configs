" Sets how close cursor can get to top or bottom of screen
set scrolloff=10

" Sets tab to 2 spaces
set tabstop=2

" Sets shifts (Shift < or >) to match whatever tab is
set shiftwidth=0

" Changes Vim line number color
highlight LineNr ctermfg=grey

" Changes Vim gutter color
highlight SignColumn ctermfg=0 ctermbg=0

" Changes visual mode color
highlight Visual cterm=NONE ctermbg=0 ctermfg=NONE guibg=Grey40

" Removes end of file tildes
highlight EndOfBuffer ctermfg=black ctermbg=black

" Theme options
set t_Co=256
""" Hilight search and set numbers
set hlsearch
highlight Search guibg=#af005f ctermbg=125
"""" clear highlight with <esc> after a search
nnoremap <C-h> :noh<return>

"#### begin 'jeffkreeftmeijer/vim-numbertoggle' configs
set number norelativenumber

set cc=80

" Airline configuration
let g:airline_powerline_fonts = 1
let g:airline#extensions#tabline#enabled = 1
let g:airline#extensions#tabline#formatter = 'default'
let g:airline_theme = 'deus'

" Nerdtree configuration
map <C-n> :NERDTreeToggle<CR>
let NERDTreeIgnore=['\.pyc$', '\~$']
autocmd VimEnter * NERDTree
autocmd VimEnter * wincmd p
let g:NERDTreeDirArrowExpandable = '▸'
let g:NERDTreeDirArrowCollapsible = '▾'

" File searchs
map <C-p> :Files<CR>

" Ale Configuration
"""" Better formatting fo worp/ale
let g:ale_echo_msg_error_str = 'E'
let g:ale_echo_msg_warning_str = 'W'
let g:ale_echo_msg_format = '[%linter%] %s [%severity%] [%...code...%]'
"""" Enable completion where available.
let g:ale_completion_enabled = 1
""" Customize linters that are turned on
let g:ale_linters = {
	\   'python': ['flake8'],
	\}
let g:ale_set_highlights = 0

"#### end 'tmsvg/pear-tree' configs
let g:pear_tree_pairs = {
            \ '(': {'closer': ')'},
            \ '[': {'closer': ']'},
            \ '{': {'closer': '}'},
            \ "'": {'closer': "'"},
            \ '"': {'closer': '"'},
						\ '<*>': {'closer': '</*>'}
            \ }
imap <silent> <C-l> <Plug>(PearTreeJump)
"#### end 'tmsvg/pear-tree' configs

" Fix keys
set backspace=2

let g:UltiSnipsExpandTrigger='<tab>'
let g:UltiSnipsListSnippets='<c-tab>'
let g:UltiSnipsJumpForwardTrigger='<c-j>'
let g:UltiSnipsJumpBackwardTrigger='<c-k>'

nmap <F8> :TagbarToggle<CR>

